{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "newLine": "LF",
    "outDir": "./cjs",
    "lib": [
      "es2020",
      "DOM"
    ],
    "strict": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.d.ts"
  ]
}
