{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "newLine": "LF",
    "outDir": "./lib",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "strict": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.d.ts"
  ]
}
